<div class="container py-5">
  <form method="POST" action="/">
    <div class="card mx-auto m-5" style="width: 50%;">
      <h3 class="text-center m-4">Account Login</h3>
      <div class="form-group mb-2 mx-4">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" value="{{userInput.email}}">
      </div>

      <div class="form-group mb-2 mx-4">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" value="">
      </div>
      <button type="submit" class="btn btn-primary mx-auto m-4" style="width:30%">Sign in</button>
      {{#if fault}}
      <p class="text-danger mx-auto">{{fault}}</p>
      {{/if}}
    </div>
  </form>

</div>